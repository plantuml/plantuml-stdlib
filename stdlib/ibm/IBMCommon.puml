' returns color based on IBM icon category name
!function $IBMColor($category)
!$category = %lower($category)
!if %json_key_exists($IBM_CATEGORY_COLORS, $category)
!return $IBM_CATEGORY_COLORS[$category]
!else
!return $IBM_BG_COLOR
!endif
!endfunction

