    .service-special {
        RoundCorner $ARCH_ROUND_CORNER_LARGE
        stereotype {
            FontSize 1
            FontColor transparent
        }
    }
    .strategy-capability {
        RoundCorner $ARCH_ROUND_CORNER
    }
    .strategy-courseofaction {
        RoundCorner $ARCH_ROUND_CORNER
    }
    .strategy-valuestream {
