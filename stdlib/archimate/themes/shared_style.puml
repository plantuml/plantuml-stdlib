    }
    .implementation-event {
        RoundCorner $ARCH_ROUND_CORNER
    }
    .implementation-workpackage {
        RoundCorner $ARCH_ROUND_CORNER
    }
    .motivation-assessment {
        DiagonalCorner $ARCH_DIAGONAL_CORNER
    }
    .motivation-constraint {
        DiagonalCorner $ARCH_DIAGONAL_CORNER
    }
    .motivation-driver {
        DiagonalCorner $ARCH_DIAGONAL_CORNER
    }
    .motivation-goal {
        DiagonalCorner $ARCH_DIAGONAL_CORNER
    }
    .motivation-meaning {
        DiagonalCorner $ARCH_DIAGONAL_CORNER
    }
    .motivation-outcome {
        DiagonalCorner $ARCH_DIAGONAL_CORNER
    }
    .motivation-principle {
